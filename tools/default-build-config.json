{
	"project": {
        "mainConfigFile": "src/main.js",
        "modules": [
            { "name": "libs" },
            { "name": "spinal-core", "exclude": ["libs"] },
            { "name": "spinal-util", "exclude": ["libs", "spinal-core"] },
            { "name": "spinal-ioc", "exclude": ["libs", "spinal-core", "spinal-util"] },
            { "name": "spinal-aop", "exclude": ["libs", "spinal-core", "spinal-util"] },
            { "name": "spinal-ui", "exclude": ["libs", "spinal-core", "spinal-util"] }
        ],
		"paths": {
			"templates": "empty:"
		},
        "fileExclusionRegExp": "^\\.|\\.html$|\\.css$|\\.sass$|\\.md$",
        "findNestedDependencies": true,
        "removeCombined": true,
        "optimize": "none",
        "uglify": {
            "toplevel": false,
            "ascii_only": true,
            "beautify": false,
            "max_line_length": 1000,
            "no_mangle": true
        },
        "dir": "dist"
    },
	"templates": {
		"spinal": {
			"src": "src/templates",
			"target": "dist"
		}
	},
	"themes": {
		"bootstrap": {
			"src": "bower_components/bootstrap/dist",
			"target": "dist"
		}
	},
    "options": {
		"debug": false,
        "minify": true,
        "banner": "./default-banner.txt"
    }
}
